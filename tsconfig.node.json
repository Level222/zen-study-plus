{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "chrome"],
    "allowImportingTsExtensions": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["dist", "src"]
}
