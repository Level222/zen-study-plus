{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "moduleDetection": "force",
    "module": "ESNext",
    "types": ["vite/client", "chrome", "svelte", "mdsvex/globals"],
    "checkJs": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
